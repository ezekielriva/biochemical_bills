<% if model.errors.any? %>
  <div class="row">
    <div id="error_explanation" data-alert class="large-12 columns alert-box warning radius">
      <h5><%= pluralize(model.errors.count, t(:error), t(:errors) ) %> <%= t(:prohibited_this_from_being_saved) %></h5>
      <ul>
      <% model.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
      <a href="#" class="close">&times;</a>
    </div>
  </div>
<% end %>
