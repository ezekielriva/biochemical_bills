<header class="row">
  <div class="large-12 columns">
    <h1>Bills</h1>
    <%= link_to 'Create', new_admin_bill_path, class:'button' %>
  </div>
</header>

<section class="row">
  <div class="large-12 columns">
    <table class="large-12">
      <tr>
        <th>Month</th>
        <th>Multiplier</th>
        <th>Total</th>
        <th>Actions</th>
      </tr>
    <% if bills %>
      <% bills.each do |bill| %>
        <td><%= bill.month.strftime('%B %Y') %></td>
        <td><%= bill.multiplier %></td>
        <td><%= number_to_currency(bill.total) %></td>
        <td><%= link_to 'Orders', admin_bill_orders_path(bill) %></td>
      <% end -%>
    <% end -%>
    </table>
  </div>
</section>
